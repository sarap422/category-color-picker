  "bugs": {
    "url": "https://github.com/sarap422/Category-Color-Picker/issues"
  },
  "homepage": "https://github.com/sarap422/Category-Color-Picker#readme",
  "devDependencies": {
    "archiver": "^5.3.1",
    "fs-extra": "^11.1.1"
  }
}